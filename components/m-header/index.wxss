@import '../../app.wxss';

.m-header {
    width: 100%;
    position: fixed;
    height: 88rpx;
    z-index: 100;
    top: 0;
    background: #fff;
    text-align: center;
}

.m-header .icon-title {
    vertical-align: top;
    margin-right: 18rpx;
    margin-top: 10rpx;
    width: 60rpx;
    height: 64rpx;
    display: inline-block;
    background-image: url(https://www.ljcpro.cn/music/img/bilibili-line.afeda9bd.png);
    background-size: 60rpx 64rpx;
}

.m-header .text {
    display: inline-block;
    vertical-align: top;
    font-size: 36rpx;
    font-weight: 400;
    line-height: 88rpx;
}

.mine {
    position: absolute;
    top: 0;
    right: 0
}

.icon-user {
    display: block;
    padding: 24rpx;
    font-size: 40rpx;
}